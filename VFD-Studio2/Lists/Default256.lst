;Bitmap
NEWSCREEN ONCE
CLEARSCREEN
LIGHT 100
BITMAP 'Bitmaps\VFDStudio128x17.bmp' 0 16
;PLAINTEXT '(c) 2004-2024' 8 6
PLAINTEXT 'by cypax.net, 2004-2024'  19 7
;PLAINTEXT 'v$VERSION$'    0 0
FRAME 0 0 255 63
;NOISE 2000
SCREENTIME 1
;STOP
SCREENEND


;An analog clock
NEWSCREEN
CLEARSCREEN
LIGHT 75
PLAINTEXT '$TIME$' 0 0
BITMAP 'Bitmaps\clockface64x64.bmp' 120 0
CLOCK -60 152 32 10 15 20
SCREENTIME 90
STOP
SCREENEND


;A digital clock
NEWSCREEN
CLEARSCREEN
LIGHT 75
BITMAP 'Y:\VFD-Studio2\Bitmaps\column.bmp'  84 26
BITMAP 'Y:\VFD-Studio2\Bitmaps\column.bmp' 172 26
TEXTOUT '$HH$'   0 1 48 'Digit Tech 7'
TEXTOUT '$MM$'  88 1 48 'Digit Tech 7'
TEXTOUT '$SS$' 176 1 48 'Digit Tech 7'
PLAINTEXT '$DOW$, $DATE$' 0 0
SCREENTIME 90
SCREENEND

;CPU
NEWSCREEN
CLEARSCREEN
LIGHT 50
PLAINTEXT 'CPU'                             00 00
PLAINTEXT '$CPUUSAGE$%'                     01 01
PLAINTEXT '$CPUVENDOR$'                     01 02
PLAINTEXT '$CPUIDENT$'                      01 03
PLAINTEXT '$CPUNAME$'                       01 04
PLAINTEXT '$CPUCORES$ cores'                01 05
PLAINTEXT 'Socket $CPUSOCKET$ '             01 06
PLAINTEXT '$CPUSPEED$ MHz (max. $CPUMAX$) ' 01 07
SCREENTIME 60
SCREENEND

; Animation
NEWSCREEN
CLEARSCREEN
LIGHT 50
PLAINTEXT '$TIME$' 0 4
PLAINTEXT 'Hallo' 1 1
ANIMATE 'Y:\VFD-Studio2\Bitmaps256\30GLOBUS.bmp' 100 64 0 64
SCREENTIME 60
;STOP
SCREENEND

;Videomodus
